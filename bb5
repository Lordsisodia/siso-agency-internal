#!/usr/bin/env python3
"""
Blackbox 5 CLI Entry Point

This script provides a convenient way to run the Blackbox 5 CLI from anywhere
in the project.

Usage:
    ./bb5 ask "What is 2+2?"
    ./bb5 agents
    ./bb5 inspect orchestrator
"""

import sys
from pathlib import Path

# Add the engine CLI to path
cli_path = Path(__file__).parent / ".blackbox5" / "2-engine" / "01-core" / "interface" / "cli" / "bb5.py"

# Execute the CLI
if __name__ == "__main__":
    import subprocess
    result = subprocess.run([sys.executable, str(cli_path)] + sys.argv[1:])
    sys.exit(result.returncode)
