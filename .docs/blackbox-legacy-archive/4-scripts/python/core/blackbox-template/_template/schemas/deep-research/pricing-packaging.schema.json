{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Deep Research - Pricing & Packaging Extract",
  "type": "object",
  "required": ["version", "offers"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "offers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "vendor": { "type": "string" },
          "url": { "type": "string" },
          "tiers": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["tier_name"],
              "properties": {
                "tier_name": { "type": "string" },
                "price": { "type": "string" },
                "billing_period": { "type": "string" },
                "limits": { "type": "array", "items": { "type": "string" } },
                "included": { "type": "array", "items": { "type": "string" } }
              },
              "additionalProperties": true
            }
          },
          "notes": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

