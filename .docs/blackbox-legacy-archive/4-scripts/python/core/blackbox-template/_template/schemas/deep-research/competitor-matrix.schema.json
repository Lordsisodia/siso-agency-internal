{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Deep Research - Competitor Matrix Extract",
  "type": "object",
  "required": ["version", "competitors"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "competitors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string" },
          "positioning": { "type": "string" },
          "pricing_summary": { "type": "string" },
          "features": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

