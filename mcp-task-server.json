{
  "name": "SISO Personal Tasks MCP Server",
  "description": "Model Context Protocol server for SISO personal task management with Supabase integration",
  "version": "1.0.0",
  "capabilities": {
    "task_management": {
      "create": true,
      "read": true,
      "update": true,
      "delete": true,
      "organize": true,
      "analyze": true
    },
    "ai_features": {
      "eisenhower_matrix": true,
      "voice_processing": true,
      "smart_categorization": true,
      "rollover_management": true
    },
    "storage": {
      "supabase": true,
      "local_cache": true,
      "real_time_sync": true,
      "offline_support": true
    }
  },
  "endpoints": {
    "tasks": {
      "get": "/api/tasks",
      "post": "/api/tasks",
      "put": "/api/tasks/:id",
      "delete": "/api/tasks/:id"
    },
    "organize": {
      "post": "/api/tasks/organize"
    },
    "voice": {
      "post": "/api/tasks/voice-process"
    },
    "sync": {
      "post": "/api/tasks/sync"
    }
  },
  "authentication": {
    "type": "supabase",
    "rls_enabled": true,
    "user_isolation": true
  },
  "database_schema": {
    "table": "tasks",
    "required_columns": [
      "id",
      "title", 
      "description",
      "category",
      "priority",
      "status",
      "assigned_to",
      "created_by",
      "created_at",
      "updated_at"
    ],
    "optional_columns": [
      "due_date",
      "completed_at",
      "duration",
      "parent_task_id",
      "rolled_over_from"
    ]
  }
}