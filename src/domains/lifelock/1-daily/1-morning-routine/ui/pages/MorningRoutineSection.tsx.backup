          if (task.key === 'meditation') {
            return (
              <React.Fragment key={task.key}>
                {taskCard}
                {/* Top 3 Daily Priorities - After Meditation */}
                <motion.div
                  key={`${task.key}-priorities`}
                  initial={{ opacity: 0, y: 20 }}
                  animate={{ opacity: 1, y: 0 }}
                  transition={{ delay: 0.4 }}
                  className="w-full"
                >
                  <Card className="mx-0 sm:mx-2 md:mx-4 bg-gradient-to-r from-yellow-900/30 to-amber-900/30 border-yellow-700/40">
