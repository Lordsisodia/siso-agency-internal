              {task.key === 'planDay' && (
                <CardContent className="p-3 sm:p-4 md:p-6 pt-0">
                  <PlanDayActions
                    isComplete={isPlanDayComplete}
                    onMarkComplete={() => setIsPlanDayComplete(true)}
                    onOpenThoughtDump={() => setShowThoughtDumpChat(true)}
