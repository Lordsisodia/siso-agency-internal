    const wakeTimestamp = getWakeUpTimestamp(routineDate, time);

    setXpState(prev => {
      if (prev.wakeAwarded) {
        return prev;
      }

      shouldAward = true;
      return {
        wakeAwarded: true,
        steps: { ...prev.steps },
        lastCompletionTimestamp: wakeTimestamp ?? prev.lastCompletionTimestamp
