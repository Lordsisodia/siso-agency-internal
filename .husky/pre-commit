#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 🛡️ React Component Safety Pre-Commit Hook
echo "🔍 Running React safety checks..."

# 1. ESLint check for React dependency issues
echo "📋 Checking ESLint rules..."
npm run lint

# 2. Component mounting tests
echo "🧪 Running component mounting tests..."
npm run test:components

# 3. TypeScript type checking
echo "🔎 TypeScript type checking..."
npx tsc --noEmit

echo "✅ All React safety checks passed!"
